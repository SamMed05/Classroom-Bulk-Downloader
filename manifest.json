{
    "manifest_version": 3,
    "name": "Classroom Bulk Downloader",
    "version": "1.5.0",
    "description": "Download multiple documents from Google Classroom in a few clicks.",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "downloads"
    ],
    "host_permissions": [
        "https://classroom.google.com/*",
        "http://classroom.google.com/*",
        "https://drive.google.com/*",
        "https://docs.google.com/*"
    ],
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "action": {
        "default_icon": "assets/icon16.png",
        "default_popup": "pop.html",
        "default_title": "Classroom Bulk Downloader"
    },
    "background": {
        "service_worker": "worker.js"
    }
}